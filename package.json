    "dev:both": "concurrently --raw \"npm: start:socket\" \"npm: dev\"",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "test:smoke": "node server/run-transcribe.js 418da986-27c1-4aa0-a7e7-90f59470c100",
