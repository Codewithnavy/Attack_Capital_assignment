    "lucide-react": "^0.554.0",
    "next": "16.0.3",
    "openai": "^6.9.1",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "eslint": "^9",
    "eslint-config-next": "16.0.3",
    "prisma": "^7.0.0",
    "tailwindcss": "^4",
    "typescript": "^5"
